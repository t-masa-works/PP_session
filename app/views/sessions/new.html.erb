<h1 class="shadow p-3 mb-5 bg-white rounded display-1">Log in</h1>
<%= form_with(scope: :session, url: sessions_path, local: true) do |f| %>

  <%= f.label :email %>
  <%= f.email_field :email, class: "form-control form-control-lg col-sm-4" %>

  <%= f.label :password %>
  <%= f.password_field :password, class: "form-control form-control-lg col-sm-4" %>

  <%= f.submit "Log in" %>
<% end %>
